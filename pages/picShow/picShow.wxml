<view class='container'>
  <swiper class="swiper" indicator-dots="{{indicatorDots}}" vertical="{{vertical}}" autoplay="{{autoplay}}" duration="{{duration}}" bindchange="bindchange"  circular="{{circular}}" current="{{num}}" style="height:{{height}}rpx;">
    <block wx:for="{{pics}}">
      <swiper-item >
        <image src="{{item}}" mode="aspectFit" bindload="imageLoad"       
        class="itemimage" style="height:{{height}}rpx;width:{{imgwidth}}rpx;"/>
      </swiper-item>
    </block>
  </swiper>
</view>
<view class='txtview'>
    <text class='txt'>{{content}}</text>
  </view>  


  

 

