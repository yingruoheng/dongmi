@import "../../libs/common.wxss";
@import "../pickerView/pickerView.wxss";
.time{
  color: #989898;
  font-size: 32px;
}

.weui-cell {
  padding: 10px 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  background-color:white;

}
.weui-cell_input {
  padding-top: 0;
  padding-bottom: 0;
}
.weui-uploader__hd {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  height: 64rpx;
}
.weui-uploader__title {
  flex: 1;
  padding-left:30rpx;
  font-size:30rpx;
  color:	#808080;
  
}
.weui-uploader__info {
  color: black;
}
.weui-uploader__bd {

  width: 700rpx;
  overflow: hidden;
}
.weui-uploader__file {
  float: left;
  margin-left: 4rpx;
  margin-bottom: 4rpx;

}
.weui-uploader__img {
  display: block;
  width: 220rpx;
  height: 220rpx;
}
.weui-uploader__input-box {
  float: left;
  position: relative;
  margin-right: 9px;
  margin-bottom: 9px;
  width: 220rpx;
  height: 220rpx;
  border: 1px solid #d9d9d9;
}
.weui-uploader__input-box:before, .weui-uploader__input-box:after {
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #d9d9d9;
}
.weui-uploader__input-box:before {
  width: 2px;
  height: 39.5px;
}
.weui-uploader__input-box:after {
  width: 39.5px;
  height: 2px;
}
.weui-uploader__input {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.hideTrue {
  display: none
}